
<h1 class="n"><%= @cocktail.name %></h1>

<div class="ingredients">
<h4>Ingredients:</h4>

<ul>

<%@cocktail.doses.each do |d|%>
<li>
  <%= d.description %> <%= d.ingredient.name %>

  <%= link_to dose_path(d),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
       <i class="fas fa-trash-alt"></i>
      <% end %>

</li>
<% end %>
</ul>
</div>
<br>
<br>
<div class="b">
<%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
</div>
<br>
<br>
<div class="b">
<%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-primary" %>
</div>


